#!/bin/bash -e
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
ROOT="$DIR/.."
GIT_REF=$("${DIR}/../git-version")

contentType="application/octet-stream"
source "$ROOT/scripts/awsutil.sh"


for os in "linux" "darwin" "windows"; do
    file="$DIR/bin/$os/bootstrap"
    dest="build-artifacts/bootstrap/$GIT_REF/bin/$os/bootstrap"
    aws_upload_file $file $dest $contentType
done

