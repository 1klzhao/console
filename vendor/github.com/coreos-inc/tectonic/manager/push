#!/bin/bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
ROOT="$DIR/.."

set -ex
TECTONIC_VERSION=$("${DIR}/../git-version")

"${ROOT}/builder-run" make -f "manager/Makefile" docker-image-deps

docker build -t quay.io/coreos/tectonic-manager:$TECTONIC_VERSION $DIR/.workspace/tmpdir
docker tag quay.io/coreos/tectonic-manager:$TECTONIC_VERSION quay.io/coreos/tectonic-manager:vdevel-latest

docker push quay.io/coreos/tectonic-manager:$TECTONIC_VERSION
docker push quay.io/coreos/tectonic-manager:vdevel-latest

