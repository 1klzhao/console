#!/bin/bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

set -ex
TECTONIC_VERSION=$("${DIR}/../git-version")

"${DIR}/../builder-run" make -f "monitoring/Makefile" all

docker build -t "quay.io/coreos/tectonic-grafana:$TECTONIC_VERSION" "$DIR/.workspace/tmpdir"
docker tag "quay.io/coreos/tectonic-grafana:$TECTONIC_VERSION" quay.io/coreos/tectonic-grafana:vdevel-latest

docker push "quay.io/coreos/tectonic-grafana:$TECTONIC_VERSION"
docker push quay.io/coreos/tectonic-grafana:vdevel-latest
